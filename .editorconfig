# configuration file for editorconfig: https://editorconfig.org/
# the most important bit here is that we indent with tabs by default

root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = tab
tab_width = 4
end_of_line = lf
charset = utf-8
max_line_length = off

[*.md]
trim_trailing_whitespace = false

[LICENSE]
indent_style = space

[*.{yml,yaml,json,cff,clang-*}]
indent_style = space
indent_size = 2
